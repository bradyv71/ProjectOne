@model Trip
@{
    ViewData["Title"] = "Add2";
}
<header>
    <h1>My Trip Log</h1>
</header>
<h1>Add Info for @Model.Accomodation</h1>
<form action="@Url.Action("Add2", "Trip")" method="post">
    @Html.HiddenFor(m => m.Destination)
    <label for="AccomodationPhone">PhoneNumber:</label><br>
    <input type="text" id="AccomodationPhone" name="AccomodationPhone"><br>

    <label for="AccomodationEmail">Email Address:</label><br>
    <input type="text" id="AccomodationEmail" name="AccomodationEmail"><br>

    <button class="btn-outline-primary" type="submit">Next</button>


</form>
<a class="btn" href="@Url.Action("Clear", "Home")">Cancel</a>